mixin active-cards(cards)
	.card__wrapper
		div(class="card__active card__default" id="cards_"+"#{cards.id}" data="#{cards.data}")
			.card__number
				| #{cards.id}
			.card__day
				| #{cards.day}
			.card__sale
				span #{cards.sale + '%'}
			.card__promocode
				| По промокоду: 
				span #{cards.promocode}
			.card__icon
				img(src="#{cards.image}", alt="icon")
			.card__category
