//- Топ баннер(в контейнере, возможно и на всю ширину)
mixin top-banner()
	section.top__banner
		.container
			.row
				img(class="top__banner__img" src="#{topBannerPath}", alt="topBanner")
					
mixin top-banner-out()
	section.top__banner
		img(class="top__banner__img" src="#{topBannerPathOut}", alt="top banner")

//- Все карточки
mixin all-cards(cards)
	.card__wrapper
		div(class="card__default" id="cards_"+"#{cards.id}")

//- Не активная карточка
mixin disable-cards(cards)
	.card__wrapper
		div(class="card__disable card__default" id="cards_"+"#{cards.id}" data="#{cards.data}")
			.card__number
				| #{cards.id}
			.card__day
				| #{cards.day}
			.card__sale
				span #{cards.sale + '%'}
			.card__icon
				img(src="#{cards.image}", alt="icon")
			.card__category
				| #{cards.category}
			a(href="#{cards.link}", target="_blank", class="card__link", onclick="pushStateToDataLayerDay(event) ('CalendarDay', 'day')")
				| #{cards.titleEmpty}

//- Пустая - не активная карточка
mixin disable-cards-empty(cards)
	.card__wrapper
		.card__disable.card__default
			.card__number
				| #{cards.id}
			.card__day
				| #{cards.day}
			.card__icon
				img(src="#{cards.image}", alt="icon")
			.card__category
				| #{cards.titleEmpty}

